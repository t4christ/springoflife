{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
    

        {
          "command": [
            "/bin/sh",
            "-c",
            "python manage.py migrate && gunicorn springs.wsgi:application --bind 0.0.0.0:8009 && python manage.py collectstatic"
        ],
            "name":"web",
            "image":"texplode/springs-web",
            "hostname": "web",
            "essential": false,
            "memory": 256
            
        },
      
        {
            "name":"smtp",
            "image":"texplode/docker_smtp",
            "hostname": "smtp",
            "essential": false,
            "memory": 128,
            "portMappings": [
              {
                  "hostPort": 25,
                  "containerPort":25
              }
          ]
        },

 
        {
            "name":"nginx",
            "image":"texplode/springs-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort":80
                },
                {
                    "hostPort": 443,
                    "containerPort":443
                }
            ],
            "links":["web"],
            "memory": 128
        }

    ]
}